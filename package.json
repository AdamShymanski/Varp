{
  "name": "root",
  "private": true,
  "scripts": {
    "start": "lerna run start --stream --scope=@pyramid/client",
    "lint": "eslint --ext=.js,.jsx ./",
    "build": "lerna run build --concurrency 2 --stream",
    "prepare": "husky install",
    "postinstall": "husky install",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.(js|jsx)": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "craco": "0.0.3",
    "craco-babel-loader": "^0.1.4",
    "cross-env": "^7.0.3",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.23.0",
    "husky": "^5.2.0",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "client": "file:packages/client",
    "server": "file:packages/server"
  }
}
